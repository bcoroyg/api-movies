{
  "name": "api-movies",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "DEBUG=app:* && nodemon src/index",
    "start": "NODE_ENV=production && node src/index",
    "prepare": "husky install",
    "test": "mocha **/**/*.test.js --exit",
    "cover": "nyc yarn test",
    "report": "nyc report --reporter=html && open coverage/index.html"

  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongodb": "^4.9.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": ">=7",
    "lint-staged": ">=10",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "engines": {
    "node": "16.x"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/routes",
      "src/controllers",
      "src/services",
      "src/lib",
      "src/utils"
    ]
  }
}
